<main>
	
	<div>Group Links</div>

	<div>
		<div>
			<% if user_signed_in? %>
				<%= form_for @post do |f| %>

					<%= f.label :content %>
					<%= f.text_area :content %>
					<%= f.submit %>
				<% end %>
			<% end %>

		</div>


		<ul>
			
			<% @posts.reverse.each do |p| %>
				<li>
					<p><%= p.content %>></p>
					<p><%= p.user.email %></p>
					<% if user_signed_in? %>
						<% if current_user.id ==p.user_id %>
							<p><%= link_to "Delete" , destroy_post_path(p.id) , method: :delete %></p>
						<% end %>
					<% end %>

					<div>
						<% if user_signed_in? %>
						<%= form_for @comment do |f| %>

							<%= f.label :content %>
							<%= f.text_area :content %>


							<%= f.hidden_field :post_id , value: p.id %>
							<%= f.submit %>
						<% end %>
					</div>

					<div>
						<ul>
						<% p.comments.reverse.each do |comment| %>
							<li>
								
								<p><%= comment.content %></p>
								<sub><%= comment.user.email %></sub>


							</li>


						<% end %>
						</ul>


					</div>
			<% end %>

		</div>

				</li>
			<% end %>





		</ul>
		
	</div>









</main>